/**********/
/* COLORS */
/**********/

yellow = #FFE850
orange = #FF6833
dark-orange = #F3541C
blue = #2EA8E4
brown = #5B2505
dark-brown = #522104
green = #6BA333

dark-gray = #505050
gray = #D0D0D0
light-gray = #F0F0F0

/*********/
/* FONTS */
/*********/

title-font = monospace
header-font = "Courier New", Monaco, monospace
body-font = "Courier New", Monaco, monospace

/*************/
/* CONSTANTS */
/*************/

picture-link-size = 11.5em

/*************/
/* FUNCTIONS */
/*************/

background-clip(type)
  background-clip type
  -moz-background-clip type
  -webkit-background-clip type

linear-gradient-top(color1, color2) {
  background: linear-gradient(top, color1, color2);
	background: -moz-linear-gradient(top, color1, color2);
  background: -webkit-linear-gradient(top, color1, color2);
  background: -o-linear-gradient(top, color1, color2);
}

/************/
/* ELEMENTS */
/************/

table
	tbody
		tr
			td
				padding 1em
				&:first-of-type
					padding-left 0
				&:last-of-type
					padding-right 0

body
  font-family body-font
  text-align center

/***********/
/* CLASSES */
/***********/

.button
  background-color brown
  border-radius .5em
  box-shadow dark-gray 1px 1px 3px 
  color yellow
  display inline-block
  font-family header-font
  linear-gradient-top brown dark-brown
  margin 2.5%
  padding 2.5%
  width 25%
  &:hover
    background-color orange 
    linear-gradient-top(orange, dark-orange)
  
.col
  float left

.content
	margin 0 auto
	width 50%

.hidden
	display none

.link
	border 1em yellow solid
	border-radius .5em
	box-shadow gray 0 0 20px
	height picture-link-size
	width picture-link-size

.link-title
	color dark-gray
	font-weight bolder
	font-size 1.25em
	margin-top 4em
	word-wrap break-word

.pdf
	background-color white
	&:hover
		background-color light-gray

.url
	background-color white
	position absolute

/***********/
/* IDS */
/***********/

#buttons
	width 100%

#code-button
	margin-left 0

#connect-button
	margin-right 0

#code-content
#craft-content
	background-color white
	border 1em yellow solid
	border-radius .5em
	box-shadow gray 0 0 20px
	margin auto
	width 50%
	p
		font-weight: bolder

#content
  margin 2em auto

#header
  background-color white
  border 1em solid blue
  border-radius 1em
  box-shadow 0px 0px 20px gray
  display inline-block
  margin-bottom 1em
  width 50%

#header-content
  margin 1em 1.25em

#lily-container
  text-align right
  width 25%

#lily-img
  width 95%

#name
  background-clip(text)
  background-color green 
  color transparent
  font-family title-font
  font-size 4em
  margin-right 5%
  margin-bottom .1em
  text-shadow rgba(255, 255, 255, .5) 0px 2px 2px
  width 100%

#name-and-buttons
  margin-top 1.25em
  width 75%